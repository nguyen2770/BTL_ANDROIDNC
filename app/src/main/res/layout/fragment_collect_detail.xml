<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginTop="56dp"
    android:layout_marginBottom="50dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtOrderInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin đơn"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <!-- Spinner chọn vật liệu -->
        <Spinner
            android:id="@+id/spinnerMaterials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"/>

        <!-- Input số lượng -->
        <EditText
            android:id="@+id/edtQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:hint="Số lượng (kg)"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp"/>


        <!-- Nút Thêm -->
        <Button
            android:id="@+id/btnAddMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm"
            />

        <!-- Danh sách vật liệu -->
        <TextView
            android:id="@+id/txtAddedMaterials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách vật liệu:"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMaterials"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:contentDescription="Danh sách vật liệu đã thêm"/>

        <!-- Nút hoàn thành -->
        <Button
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoàn thành"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>

